{
  "openapi": "3.0.0",
  "info": {
    "title": "Trybe Project Blogs API",
    "description": "Projeto para validação de conhecimento usando ORM Sequelize e autenticação JWT.",
    "version": "1.0.0"
  },
  "paths": {
    "/login": {
      "post": {
        "summary": "Autenticação de usuário.",
        "description": "Rota responsável por autenticar o usuário e gerar um token.",
        "tags": [
          "Login"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Login"
              },
              "examples": {
                "user": {
                  "value": {
                    "email": "lewishamilton@gmail.com",
                    "password": "123456"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "400": {
            "description": "Ausência de algum campo para autenticação."
          },
          "200": {
            "description": "Autenticação realizada com sucesso."
          }
        }
      }
    },
    "/user": {
      "post": {
        "summary": "Criação de novo usuário",
        "description": "Rota responsável por criar um novo usuário ao banco.",
        "tags": [
          "User"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/NewUser"
              },
              "examples": {
                "newUser": {
                  "value": {
                    "displayName": "Jonas Doe",
                    "email": "jonas@doc.com",
                    "password": "123456",
                    "image": "None"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "400": {
            "description": "Ausência de algum campo no preenchimento do cadastro."
          },
          "409": {
            "description": "Email já usado para cadastro."
          },
          "201": {
            "description": "Novo usuário criado com sucesso."
          }
        }
      },
      "get": {
        "summary": "Veja todos usuários cadastrados.",
        "description": "Mostra todos os usuários cadastrados. É necessário adicionar um token para ter acesso à esta rota.",
        "tags": [
          "User"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Realizada a busca com sucesso.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          },
          "401": {
            "description": "Acesso não autorizado, é necessário um token autenticado para realizar a busca de todos usuários."
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Login": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      },
      "NewUser": {
        "type": "object",
        "properties": {
          "displayName": {
            "description": "Precisar ter no mínimo 8 caracteres",
            "type": "string",
            "required": true
          },
          "email": {
            "description": "Precisar ser um email valido, contento caracteristicas de um email",
            "type": "string",
            "required": true
          },
          "password": {
            "description": "Precisar ter no mínimo 6 caracteres",
            "type": "string",
            "required": true
          },
          "image": {
            "type": "string"
          }
        }
      },
      "User": {
        "type": "object",
        "properties": {
          "displayName": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "image": {
            "type": "string"
          }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}